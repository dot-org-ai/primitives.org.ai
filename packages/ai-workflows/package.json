{
  "name": "ai-workflows",
  "version": "2.1.4",
  "description": "Event-driven workflows with state machine support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./worker": {
      "import": "./dist/worker/index.js",
      "types": "./dist/worker/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:workers": "vitest --config vitest.workers.config.ts",
    "test:workers:coverage": "vitest run --config vitest.workers.config.ts --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@org.ai/types": "workspace:*",
    "digital-objects": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.0",
    "@cloudflare/workers-types": "^4.20250109.0",
    "vitest": "^2.1.0",
    "wrangler": "^4.0.0"
  },
  "keywords": [
    "ai",
    "workflows",
    "events",
    "state-machine",
    "primitives"
  ],
  "license": "MIT"
}
