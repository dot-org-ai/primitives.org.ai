{
  "name": "digital-tasks",
  "version": "2.1.3",
  "description": "Task management primitives for digital workers (agents and humans)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./queue": {
      "import": "./dist/queue.js",
      "types": "./dist/queue.d.ts"
    },
    "./worker": {
      "import": "./dist/worker.js",
      "types": "./dist/worker.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "ai-functions": "workspace:*",
    "digital-tools": "workspace:*",
    "digital-workers": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.0",
    "@cloudflare/workers-types": "^4.20250124.0",
    "vitest": "3.0.4"
  },
  "keywords": [
    "ai",
    "tasks",
    "queue",
    "workers",
    "agents",
    "primitives"
  ],
  "license": "MIT"
}
